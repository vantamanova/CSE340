<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <!-- Delete Inventory Form -->
                    <form action="/inv/delete" method="post" class="inventory-form" id="deleteForm">
                        <label for="inv_make">Make:</label>
                        <input type="text" id="inv_make" name="inv_make" readonly value="<%= locals.inv_make %>">

                        <label for="inv_model">Model:</label>
                        <input type="text" id="inv_model" name="inv_model" readonly value="<%= locals.inv_model %>">

                        <label for="inv_year">Year:</label>
                        <input type="number" id="inv_year" name="inv_year" readonly value="<%= locals.inv_year %>">

                        <label for="inv_price">Price:</label>
                        <input type="number" id="inv_price" name="inv_price" readonly value="<%= locals.inv_price %>">

                        <div id="passwordRequirements">
                            <p>*Confirm Deletion - The delete is permanent</p>
                        </div>

                        <button type="submit">Delete Vehicle</button>

                        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                            <% } %>>
                    </form>