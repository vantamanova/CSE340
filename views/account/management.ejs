<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
                    <div class="account-management">
                        <p id="login-message">You're logged in.</p>

                        <% if (locals.accountData.account_type==="Client" ) { %>
                            <h2>Welcome <%= locals.accountData.account_firstname %>
                            </h2>
                            <p> <a href="/account/update/<%= locals.accountData.account_id %>">Update Account
                                    Information</a></p>
                            <p><a href="/message">Message Center</a></p>
                            <% } else { %>
                                <h2>Welcome <%= locals.accountData.account_firstname %>
                                </h2>
                                <h3>Inventory Management</h3>
                                <p> <a href="/account/update/<%= locals.accountData.account_id %>">Update Account
                                        Information</a></p>
                                <p><a href="/message">Message Center</a></p>
                                <p><a href="/inv">Inventory Management</a></p>
                                <% } %>
                    </div>